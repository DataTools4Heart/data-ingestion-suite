{
  "id" : "condition-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/omop_nlp/condition",
  "name" : "condition-mapping",
  "title" : "condition-mapping",
  "source" : [ {
    "alias" : "noteNlp",
    "url" : "https://datatools4heart.eu/fhir/schemas/omop_nlp/Note_nlp",
    "joinOn" : [ "note_id", "section_concept_id" ]
  }, {
    "alias" : "note",
    "url" : "https://datatools4heart.eu/fhir/schemas/omop_nlp/Note",
    "joinOn" : [ "note_id" ]
  }, {
    "alias" : "concept",
    "url" : "https://datatools4heart.eu/fhir/schemas/omop_nlp/Concept",
    "joinOn" : [ "concept_id" ]
  } ],
  "context" : { },
  "variable" : [ {
    "name" : "code",
    "language" : "text/fhirpath",
    "expression" : "trms:translateToCoding(note_nlp_concept_id.toString(), 'https://www.ohdsi.org/omop', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/note-nlp-snomed-to-icd10').code"
  } ],
  "mapping" : [ {
    "expression" : {
      "name" : "condition",
      "language" : "application/fhir-template+json",
      "value" : {
        "code" : {
          "coding" : {
            "{{#codingVar}}" : "{{iif(%concept.vocabulary_id = 'ICD10', %concept.concept_code, %code)}}",
            "{{*}}" : {
              "system" : "http://hl7.org/fhir/sid/icd-10",
              "code" : "{{%codingVar}}"
            }
          }
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', %note.person_id.toString())}}",
        "encounter" : "{{? mpp:createFhirReferenceWithHashedId('Encounter', %note.visit_occurrence_id.toString())}}",
        "onsetDateTime" : "{{nlp_datetime}}",
        "clinicalStatus" : {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/condition-clinical",
            "code" : "active"
          } ]
        },
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Condition" ]
        },
        "resourceType" : "Condition"
      }
    },
    "precondition" : {
      "name" : "isConditionAndDefined",
      "language" : "text/fhirpath",
      "expression" : "%concept.domain_id = 'Condition' and (%code.exists() or %concept.vocabulary_id = 'ICD10')"
    }
  } ]
}