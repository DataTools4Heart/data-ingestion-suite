{
  "id" : "encounter-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/rs-chd/encounter-mapping",
  "name" : "encounter-mapping",
  "title" : "Visit table mapping",
  "isDraft" : false,
  "source" : [ {
    "alias" : "source",
    "url" : "https://datatools4heart.eu/fhir/schemas/rs-chd/Encounter",
    "joinOn" : [ ]
  } ],
  "context" : { },
  "variable" : [ ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('Encounter', 'chd' & identifier)}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Encounter" ]
        },
        "resourceType" : "Encounter",
        "class" : [ {
          "coding": [ {
            "code": "IMP",
            "display": "inpatient encounter",
            "system": "http://terminology.hl7.org/CodeSystem/v3-ActCode"
          } ]
        } ],
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', subject.toString())}}",
        "actualPeriod" : {
          "start" : "{{admissionDateTime.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss' | 'yyyy-MM-dd')}}",
          "end" : "{{dischargeDateTime.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss')}}"
        },
        "identifier" : [ {
          "value" : "{{identifier}}"
        } ],
        "status" : "completed"
      }
    }
  } ]
}