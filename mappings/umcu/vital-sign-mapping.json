{
  "id" : "vital-sign-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/umcu/vital-sign-mapping",
  "name" : "vital-sign-mapping",
  "title" : "Mapping of UMCU's vitalsign table to HFR-VitalSign FHIR profile",
  "isDraft" : false,
  "source" : [ {
    "alias" : "source",
    "url" : "https://datatools4heart.eu/fhir/schemas/umcu/VitalSign",
    "joinOn" : [ "studyId_0919" ]
  }, {
    "alias" : "encounters",
    "url" : "https://datatools4heart.eu/fhir/schemas/umcu/Encounter",
    "joinOn" : [ "studyId_0919" ]
  } ],
  "context" : {
    "vitalSignMap" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/umcu/vital-sign-concept-map.csv"
    }
  },
  "variable" : [ {
    "name" : "relatedEncounter",
    "language" : "text/fhirpath",
    "expression" : " %encounters.where(period_start.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss') <= %context.effectivedatetime.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss') and period_end.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss') >= %context.effectivedatetime.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss')).first().identifier_value "
  } ],
  "mapping" : [ {
    "precondition" : {
      "name" : "valueExists",
      "language" : "text/fhirpath",
      "expression" : "valueQuantity_value.exists() or component_valueQuantity_value.exists()"
    },
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('Observation', identifier_value & effectiveDateTime.toString())}}",
        "meta" : {
          "source" : "{{%sourceSystem.sourceUri}}",
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-VitalSign" ]
        },
        "resourceType" : "Observation",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/observation-category",
            "code" : "vital-signs",
            "display" : "Vital Signs"
          } ]
        } ],
        "code" : {
          "coding" : [ {
            "system" : "http://loinc.org",
            "code" : "{{mpp:getConcept(%vitalSignMap, LOINCcode, 'target_code')}}",
            "display" : "{{LOINCdisplay}}",
            "@sliceName" : "loincCode"
          } ]
        },
        "effectiveDateTime" : "{{effectiveDateTime.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss')}}",
        "valueQuantity" : {
          "system" : "http://unitsofmeasure.org",
          "code" : "{{mpp:getConcept(%vitalSignMap, LOINCcode, 'target_unit')}}",
          "value" : "{{? iif(valueQuantity_value.exists() and valueQuantity_value != '', valueQuantity_value)}}",
          "unit" : "{{mpp:getConcept(%vitalSignMap, LOINCcode, 'target_unit')}}"
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', studyId_0919.toString())}}",
        "encounter" : "{{? mpp:createFhirReferenceWithHashedId('Encounter', %relatedEncounter)}}",
        "identifier" : [ {
          "value" : "{{ identifier_value & '-' & effectiveDateTime.toString() }}"
        } ],
        "status" : "final"
      }
    }
  } ]
}