{
  "id" : "condition-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/gem/condition-mapping",
  "name" : "condition-mapping",
  "title" : "Mapping of GEM's patologie table to the DT4H Condition FHIR profile",
  "source" : [ {
    "alias" : "source",
    "url" : "https://datatools4heart.eu/fhir/schemas/gem/patologie",
    "joinOn" : [ ]
  } ],
  "context" : { },
  "variable" : [ {
    "name" : "icd9Codes",
    "language" : "text/fhirpath",
    "expression" : "ICD9_CODES.replace('.', '').utl:split(',')"
  }, {
    "name" : "icd10Codes",
    "language" : "text/fhirpath",
    "expression" : "%icd9Codes.select(trms:translateToCoding(%icd9Codes[$index], 'http://terminology.hl7.org/CodeSystem/icd9cm', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/icd9-to-icd10'))"
  } ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "code" : {
          "coding" : [ "{{* %icd10Codes}}" ]
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', CODICE_SANITARIO.toString())}}",
        "onsetDateTime" : "{{data_in}}",
        "clinicalStatus" : {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/condition-clinical",
            "code" : "active"
          } ]
        },
        "id" : "{{mpp:getHashedId('Condition', CODICE_SANITARIO.toString() & data_in.toString() & Patologia & now().toString())}}",
        "meta" : {
          "source" : "{{%sourceSystem.sourceUri}}",
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Condition" ]
        },
        "resourceType" : "Condition"
      }
    },
    "precondition" : {
      "name" : "isCondition",
      "language" : "text/fhirpath",
      "expression" : "STATUS = 1 and %icd10Codes.exists()"
    }
  } ]
}