{
  "id" : "condition-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/gem/condition-mapping",
  "name" : "condition-mapping",
  "title" : "Mapping of GEM's patologie table to the DT4H Condition FHIR profile",
  "source" : [ {
    "alias" : "source",
    "url" : "https://datatools4heart.eu/fhir/schemas/gem/patologie",
    "joinOn" : [ ]
  } ],
  "context" : { },
  "variable" : [ ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "{{#conditionCode}}" : "{{icd9_codes.utl:split(',')}}",
        "{{*}}" : {
          "{{#translatedCode}}" : "{{trms:translateToCoding(%conditionCode, 'http://terminology.hl7.org/CodeSystem/icd9cm', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/icd9-to-icd10').code.first()}}",
          "{{?}}" : {
            "clinicalStatus" : {
              "coding" : [ {
                "system" : "http://terminology.hl7.org/CodeSystem/condition-clinical",
                "code" : "active",
                "@sliceName" : "fhirCode"
              } ]
            },
            "code" : {
              "coding" : [ {
                "system" : "http://hl7.org/fhir/sid/icd-10",
                "code" : "{{%translatedCode}}",
                "@sliceName" : "icd10Code"
              } ]
            },
            "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', codice_sanitario.toString())}}",
            "onsetDateTime" : "{{data_in}}",
            "id" : "{{mpp:getHashedId('Condition', codice_sanitario.toString() & data_in.toString() & %conditionCode)}}",
            "meta" : {
              "source" : "{{%sourceSystem.sourceUri}}",
              "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-Condition" ]
            },
            "resourceType" : "Condition"
          }
        }
      }
    },
    "precondition" : {
      "name" : "isCondition",
      "language" : "text/fhirpath",
      "expression" : "status = 1 and patologia != 'ABITUDINE_TABAGICA'"
    }
  } ]
}