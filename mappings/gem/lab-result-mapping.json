{
  "id": "gem-lab-result-vital-sign-mapping",
  "url": "https://datatools4heart.eu/fhir/mappings/gem/lab-result-and-vital-sign-mappings",
  "name": "lab-result-vital-sign-mappings",
  "title": "Mapping of Gemelli lab results to DT4H Lab Result FHIR profile",
  "source": [
    {
      "alias": "labResults",
      "url": "https://datatools4heart.eu/gem/DiarioMisure",
      "joinOn": ["codice_sanitario"]
    },
    {
      "alias": "encounters",
      "url": "https://datatools4heart.eu/gem/Elenco_Contatti",
      "joinOn": ["codice_sanitario"]
    }
  ],
  "context": {
    "labResultsConceptMap":  {
      "category": "concept-map",
      "url": "./lab-results-concept-map.csv"
    },
    "labResultUnitConversion": {
      "category": "unit-conversion",
      "url": "./lab-results-unit-conversion.csv"
    }
  },
  "variable": [
    {
      "name": "labLoincCode",
      "language": "text/fhirpath",
      "expression": "mpp:getConcept(%labResultsConceptMap, codice_esame)"
    },
    {
      "name": "relatedEncounter",
      "language": "text/fhirpath",
      "expression": "TODO %encounters.where(data_in.toDate() <= (%context.data_ora_esame.replace(' ','T') + 'Z').toDate() and data_out.toDate() >= (%context.data_ora_esame.replace(' ','T') + 'Z').toDate()).first()"
    }
  ],
  "mapping": [
    {
      "precondition": {
        "name": "loincCodeAndRelatedEncounterExist",
        "language": "text/fhirpath",
        "expression": "%labLoincCode.exists() and %relatedEncounter.exists()"
      },
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Observation",
          "id": "{{mpp:getHashedId('Observation', 'gem_' + id + '_lab_result')}}",
          "meta": {
            "profile": [
              "{{iif(category = 'LAB_RESULTS', 'https://datatools4heart.eu/fhir/StructureDefinition/DT4H-LabResult', 'https://datatools4heart.eu/fhir/StructureDefinition/DT4H-VitalSign')}}"
            ],
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "status": "final",
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "{{iif(category = 'LAB_RESULTS', 'laboratory', 'vital-signs')}}"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "https://datatools4heart.eu/gem/LabResult",
                "code": "{{codice_esame}}"
              },
              {
                "system": "http://loinc.org",
                "code": "{{mpp:getConcept(%labResultsConceptMap, codice_esame, 'target_code')}}",
                "display": "{{? mpp:getConcept(%labResultsConceptMap, codice_esame, 'target_display')}}"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', 'gem_' + codice_sanitario)}}",
          "encounter": "{{mpp:createFhirReferenceWithHashedId('Encounter', 'gem_' + %relatedEncounter.id)}}",
          "effectiveDateTime": "{{TODO data_ora_esame.toString().replace(' ','T') + 'Z'}}",
          "valueQuantity": "{{mpp:convertAndReturnQuantity(%labResultUnitConversion, codice_esame, value, unita_misura).nav:orElse(utl:createFhirQuantity(value, unita_misura))}}"
        }
      }
    }
  ]
}
