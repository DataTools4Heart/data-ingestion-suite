{
  "id" : "encounter-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/gem/encounter-mapping",
  "name" : "encounter-mapping",
  "title" : "Mapping of GEM's elenco_contatti table to DT4H Encounter FHIR profile",
  "source" : [ {
    "alias" : "encounterMain",
    "url" : "https://datatools4heart.eu/fhir/schemas/gem/ElencoContatti",
    "joinOn" : [ "codice_sanitario", "nosografico" ]
  }, {
    "alias" : "encounterDetails",
    "url" : "https://datatools4heart.eu/fhir/schemas/gem/DettaglioContatti",
    "joinOn" : [ "codice_sanitario", "nosografico_adt" ]
  } ],
  "context" : {
    "encounterClassConceptMap" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/gem/encounter-class-concept-map.csv"
    }
  },
  "variable" : [ ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "class" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/v3-ActCode",
            "code" : "{{mpp:getConcept(%encounterClassConceptMap, d_evento, 'target_code')}}",
            "display" : "{{mpp:getConcept(%encounterClassConceptMap, d_evento, 'target_display')}}"
          } ]
        } ],
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', codice_sanitario)}}",
        "actualPeriod" : {
          "start" : "{{data_in & 'T' & ora_in & ':00+02:00'}}",
          "end" : "{{data_out & 'T' & ora_out & ':00+02:00'}}"
        },
        "status" : "completed",
        "reason" : {
          "{{#reasonCodeVar}}" : "{{utl:evaluateExpression(utl:indices(1, 7).select('iif(%encounterDetails.diag' & $this.toString() & '_icd9cm.exists(), ' & $this.toString() & ', {})').mkString(' | ')).select('diag' & $this.toString() & '_icd9cm')}}",
          "{{*}}" : {
            "value" : [ {
              "concept" : {
                "coding" : "{{* trms:translateToCoding(utl:evaluateExpression('%encounterDetails.' & %reasonCodeVar), 'http://terminology.hl7.org/CodeSystem/icd9cm', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/icd9-to-icd10')}}"
              }
            } ]
          }
        },
        "id" : "{{mpp:getHashedId('Encounter', nosografico)}}",
        "meta" : {
          "source" : "{{%sourceSystem.sourceUri}}",
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Encounter" ]
        },
        "resourceType" : "Encounter"
      }
    }
  }, {
    "expression" : {
      "name" : "procedure",
      "language" : "application/fhir-template+json",
      "value" : {
        "{{#ind}}" : "{{utl:evaluateExpression(utl:indices(1, 7).select('iif(%encounterDetails.proc' & $this.toString() & '.exists(), ' & $this.toString() & ', {})').mkString(' | ')).select($this.toString())}}",
        "{{*}}" : {
          "{{#translatedCode}}" : "{{trms:translateToCoding(utl:evaluateExpression('%encounterDetails.proc' & %ind), 'http://terminology.hl7.org/CodeSystem/icd9cm', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/icd9-to-icd10pcs').code.first()}}",
          "{{?}}" : {
            "code" : {
              "coding" : "{{* trms:translateToCoding(utl:evaluateExpression('%encounterDetails.proc' & %ind), 'http://terminology.hl7.org/CodeSystem/icd9cm', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/icd9-to-icd10pcs')}}"
            },
            "category" : [ {
              "coding" : [ {
                "system" : "http://snomed.info/sct",
                "code" : "387713003",
                "display" : "Surgical procedure (procedure)"
              } ]
            } ],
            "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', codice_sanitario)}}",
            "occurrenceDateTime" : "{{utl:evaluateExpression('%encounterDetails.dataproc' & %ind)}}",
            "status" : "completed",
            "id" : "{{mpp:getHashedId('Procedure', codice_sanitario & utl:evaluateExpression('%encounterDetails.dataproc' & %ind).toString() & %ind) }}",
            "meta" : {
              "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Procedure" ]
            },
            "resourceType" : "Procedure"
          }
        }
      }
    }
  } ]
}