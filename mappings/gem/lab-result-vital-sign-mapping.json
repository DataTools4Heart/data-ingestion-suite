{
  "id" : "lab-result-vital-sign-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/gem/lab-result-and-vital-sign-mapping",
  "name" : "lab-result-vital-sign-mapping",
  "title" : "Mapping of Gemelli lab results to DT4H Lab Result FHIR profile",
  "source" : [ {
    "alias" : "labResults",
    "url" : "https://datatools4heart.eu/fhir/schemas/gem/DiarioMisure",
    "joinOn" : [ "codice_sanitario" ]
  }, {
    "alias" : "encounters",
    "url" : "https://datatools4heart.eu/fhir/schemas/gem/ElencoContatti",
    "joinOn" : [ "codice_sanitario" ]
  } ],
  "context" : {
    "labResultsConceptMap" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/gem/lab-results-concept-map.csv"
    },
    "labResultUnitConversion" : {
      "category" : "unit-conversion",
      "url" : "$CONTEXT_REPO/gem/lab-results-unit-conversion.csv"
    },
    "vitalSignsConceptMap" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/gem/vital-signs-concept-map.csv"
    }
  },
  "variable" : [ {
    "name" : "labLoincCode",
    "language" : "text/fhirpath",
    "expression" : "(category = 'LAB_RESULTS' and mpp:getConcept(%labResultsConceptMap, codice_esame).exists()) or true"
  }, {
    "name" : "relatedEncounter",
    "language" : "text/fhirpath",
    "expression" : "%encounters.where(data_in.toDate() <= %context.data_ora_esame.toFhirDateTime('yyyy-MM-dd HH:mm').toDate() and data_out.toDate() >= %context.data_ora_esame.toFhirDateTime('yyyy-MM-dd HH:mm').toDate()).first()"
  } ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "status" : "final",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/observation-category",
            "code" : "{{iif(category = 'LAB_RESULTS', 'laboratory', 'vital-signs')}}",
            "display" : "{{iif(category = 'LAB_RESULTS', 'Laboratory', 'Vital Signs')}}"
          } ]
        } ],
        "code" : {
          "coding" : [ {
            "system" : "http://loinc.org",
            "code" : "{{iif(category = 'LAB_RESULTS', mpp:getConcept(%labResultsConceptMap, codice_esame, 'target_code'), mpp:getConcept(%vitalSignsConceptMap, codice_esame, 'target_code'))}}",
            "display" : "{{? mpp:getConcept(%labResultsConceptMap, codice_esame, 'target_display')}}"
          } ]
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', codice_sanitario.toString())}}",
        "encounter" : "{{mpp:createFhirReferenceWithHashedId('Encounter', %relatedEncounter.nosografico)}}",
        "effectiveDateTime" : "{{data_ora_esame.toFhirDateTime('yyyy-MM-dd HH:mm')}}",
        "valueQuantity" : "{{iif(category = 'LAB_RESULTS', mpp:convertAndReturnQuantity(%labResultUnitConversion, codice_esame, value, unita_misura), utl:createFhirQuantity(value, unita_misura, 'http://unitsofmeasure.org', unita_misura))}}",
        "id" : "{{mpp:getHashedId('Observation', codice_sanitario.toString() & data_ora_esame & codice_esame)}}",
        "meta" : {
          "source" : "{{%sourceSystem.sourceUri}}",
          "profile" : [ "{{iif(category = 'LAB_RESULTS', 'https://datatools4heart.eu/fhir/StructureDefinition/HFR-LabResult', 'https://datatools4heart.eu/fhir/StructureDefinition/HFR-VitalSign')}}" ]
        },
        "resourceType" : "Observation"
      }
    },
    "precondition" : {
      "name" : "loincCodeAndRelatedEncounterExist",
      "language" : "text/fhirpath",
      "expression" : "%labLoincCode.exists() and %relatedEncounter.exists()"
    }
  } ]
}