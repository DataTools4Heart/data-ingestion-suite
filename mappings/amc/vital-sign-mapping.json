{
  "id" : "vital-sign-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/amc/vital-sign-mapping",
  "name" : "vital-sign-mapping",
  "title" : "Mapping of AMC's VitalSign (Oxygen saturation in Arterial blood by Pulse oximetry, Heart rate) table to DT4H-VitalSign FHIR profile",
  "isDraft" : false,
  "source" : [ {
    "alias" : "source",
    "url" : "https://datatools4heart.eu/fhir/schemas/amc/vitalsign",
    "joinOn" : [ ]
  } ],
  "context" : {
    "vitalSignMap" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/amc/vital-sign-concept-map.csv"
    }
  },
  "variable" : [ {
    "name" : "date",
    "language" : "text/fhirpath",
    "expression" : "MetingVitaleGegevensId.utl:split('|').last().utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss.SSS')"
  } ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('Observation', Pseudo_id.toString() & Patientcontactid.toString() & %date.toString() & MeetTijd.toString() & LOINCcode)}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-VitalSign" ]
        },
        "resourceType" : "Observation",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/observation-category",
            "code" : "vital-signs",
            "display" : "Vital Signs"
          } ]
        } ],
        "code" : {
          "coding" : [ {
            "system" : "http://loinc.org",
            "code" : "{{mpp:getConcept(%vitalSignMap, LOINCcode, 'target_code')}}",
            "display" : "{{LOINCdisplay}}",
            "@sliceName" : "loincCode"
          } ]
        },
        "effectiveDateTime" : "{{%date}}",
        "valueQuantity" : {
          "system" : "http://unitsofmeasure.org",
          "code" : "{{Unit.nav:orElse('%')}}",
          "value" : "{{ValueQuantity.toDecimal()}}",
          "unit" : "{{Unit.nav:orElse('%')}}"
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', Pseudo_id.toString())}}",
        "encounter" : "{{mpp:createFhirReferenceWithHashedId('Encounter', Patientcontactid)}}",
        "identifier" : [ {
          "value" : "{{Pseudo_id.toString() & '-' & Patientcontactid.toString() & '-' & %date.toString()}}"
        } ],
        "status" : "final"
      }
    }
  } ]
}