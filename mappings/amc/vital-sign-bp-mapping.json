{
  "id" : "vital-sign-bp-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/amc/vital-sign-bp-mapping",
  "name" : "vital-sign-bp-mapping",
  "title" : "Mapping of AMC's BloodPressure table to DT4H-VitalSign FHIR profile",
  "isDraft" : false,
  "source" : [ {
    "alias" : "VitalSignBp",
    "url" : "https://datatools4heart.eu/fhir/schemas/amc/VitalSignBp",
    "joinOn" : [ ]
  } ],
  "context" : {
    "vitalSignMap" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/amc/vital-sign-concept-map.csv"
    }
  },
  "variable" : [ ],
  "mapping" : [ {
    "expression" : {
      "name" : "bp",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('Observation', Pseudo_id.toString() & Patientcontactid.toString() & MeetMoment.toString() & MeetTijd.toString() & LOINCcode)}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-VitalSign" ]
        },
        "resourceType" : "Observation",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/observation-category",
            "code" : "vital-signs",
            "display" : "Vital Signs"
          } ]
        } ],
        "code" : {
          "coding" : [ {
            "system" : "http://loinc.org",
            "code" : "{{mpp:getConcept(%vitalSignMap, LOINCcode, 'target_code')}}",
            "display" : "{{LOINCdisplay}}",
            "@sliceName" : "loincCode"
          } ]
        },
        "effectiveDateTime" : "{{MeetMoment.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss.SSS')}}",
        "valueQuantity" : {
          "system" : "http://unitsofmeasure.org",
          "code" : "mm[Hg]",
          "value" : "{{ValueQuantity.toDecimal()}}",
          "unit" : "mm[Hg]"
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', Pseudo_id.toString())}}",
        "encounter" : "{{mpp:createFhirReferenceWithHashedId('Encounter', Patientcontactid)}}",
        "identifier" : [ {
          "value" : "{{Pseudo_id.toString() & '-' & Patientcontactid.toString() & '-' & MeetMoment.toString()}}"
        } ],
        "status" : "final"
      }
    }
  } ]
}