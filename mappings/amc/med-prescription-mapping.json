{
  "id" : "med-prescription-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/amc/med-prescription-mapping",
  "name" : "med-prescription-mapping",
  "title" : "Mapping of AMC's MedicationPrescription table to DT4H-MedicationRequest FHIR profile",
  "isDraft" : false,
  "source" : [ {
    "alias" : "source",
    "url" : "https://datatools4heart.eu/fhir/schemas/amc/MedicationPrescription",
    "joinOn" : [ "PatientContactId" ]
  }, {
    "alias" : "encounters",
    "url" : "https://datatools4heart.eu/fhir/schemas/amc/encounter",
    "joinOn" : [ "PatientContactId" ]
  } ],
  "context" : {
    "medPresFreqMap" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/amc/med-prescription-frequency-unit-map.csv"
    }
  },
  "variable" : [ ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('MedicationRequest', prescriptionID.toString())}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-MedicationRequest" ]
        },
        "resourceType" : "MedicationRequest",
        "medication" : {
          "concept" : {
            "coding" : [ {
              "system" : "http://www.whocc.no/atc",
              "code" : "{{ATCCode}}",
              "@sliceName" : "atcCode"
            } ],
            "text" : "{{? MedicatieGeneriekeNaam}}"
          }
        },
        "subject" : "{{? mpp:createFhirReferenceWithHashedId('Patient', pseudo_id.toString())}}",
        "encounter" : "{{? mpp:createFhirReferenceWithHashedId('Encounter', PatientContactId)}}",
        "identifier" : [ {
          "value" : "{{prescriptionID.toString()}}"
        } ],
        "status" : "unknown",
        "intent" : "order",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/medicationrequest-admin-location",
            "code" : "{{ iif(IsHomeMedication = 'Ja', 'community', 'outpatient') }}"
          } ]
        } ],
        "effectiveDosePeriod" : {
          "start" : "{{StartDate.utl:toFhirDateTime('yyyy-MM-dd' | 'yyyy-MM-dd HH:mm:s')}}",
          "end" : "{{? iif(StopDate.utl:toFhirDateTime('yyyy-MM-dd'| 'yyyy-MM-dd HH:mm:ss') > StartDate.utl:toFhirDateTime('yyyy-MM-dd' | 'yyyy-MM-dd HH:mm:ss'), StopDate.utl:toFhirDateTime('yyyy-MM-dd' | 'yyyy-MM-dd HH:mm:ss')) }}"
        },
        "dosageInstruction" : [ {
          "timing" : {
            "repeat" : {
              "frequency" : "{{? dosInstr_frequency_value.toDecimal()}}",
              "period" : "{{1}}",
              "periodUnit" : "{{? mpp:getConcept(%medPresFreqMap, dosInstr_frequency_unit, 'target_code')}}"
            }
          },
          "asNeeded" : "{{iif(dosInstr_asNeeded_display = 1 , true, false)}}",
          "doseAndRate" : [ {
            "doseQuantity" : {
              "value" : "{{? dosInstr_doseQuantity_value.toDecimal() }}",
              "unit" : "{{? iif(dosInstr_doseQuantity_unit.exists() and dosInstr_doseQuantity_unit != '', dosInstr_doseQuantity_unit) }}"
            }
          } ]
        } ]
      }
    }
  } ]
}