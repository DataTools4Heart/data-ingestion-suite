{
  "id" : "condition-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/amc/condition-mapping",
  "name" : "condition-mapping",
  "title" : "Mapping of AMC's MedischeDiagnose table to DT4H-Condition FHIR profile",
  "isDraft" : false,
  "source" : [ {
    "alias" : "Condition",
    "url" : "https://datatools4heart.eu/fhir/schemas/amc/condition",
    "joinOn" : [ ]
  } ],
  "context" : { },
  "variable" : [ {
    "name" : "diagnoseCodes",
    "language" : "text/fhirpath",
    "expression" : "iif(DiagnoseCode.exists(), DiagnoseCode.replace('+','').replace('*','').utl:split(';').where($this.length() < 9).select($this.utl:trim()) )"
  } ],
  "mapping" : [ {
    "description" : "Run this mapping before encounter mapping. Because Encounter mapping also creates Conditions and it makes Conditions primary diagnoses.",
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "{{#diagnoseCode}}" : "{{%diagnoseCodes}}",
        "{{*}}" : {
          "id" : "{{ mpp:getHashedId('Condition', Pseudo_id.toString() & PatientContactId.toString() & %diagnoseCode.toString() & RegistratieDatum.toString() & Specialty.toString() ) }}",
          "meta" : {
            "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Condition" ]
          },
          "resourceType" : "Condition",
          "code" : {
            "coding" : [ {
              "code" : "{{%diagnoseCode}}",
              "system" : "http://hl7.org/fhir/sid/icd-10",
              "@sliceName" : "icd10Code"
            } ]
          },
          "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', Pseudo_id.toString())}}",
          "encounter" : "{{? iif(PatientContactId != '', mpp:createFhirReferenceWithHashedId('Encounter', PatientContactId)) }}",
          "onsetDateTime" : "{{RegistratieDatum.utl:toFhirDateTime('yyyy-MM-dd' | 'yyyy-MM-dd HH:mm:ss')}}",
          "identifier" : [ {
            "value" : "{{ Pseudo_id.toString() & '-' & PatientContactId.toString() & '-'& %diagnoseCode.toString() & '-'& RegistratieDatum.toString() & '-' & Specialty.toString() }}"
          } ],
          "clinicalStatus" : {
            "coding" : [ {
              "code" : "{{PatientProbleemstatus}}",
              "system" : "http://terminology.hl7.org/CodeSystem/condition-clinical",
              "display" : "{{iif(PatientProbleemstatus = 'active', 'Active', 'Resolved') }}"
            } ]
          },
          "category" : [ {
            "coding" : [ {
              "code" : "problem-list-item",
              "system" : "http://terminology.hl7.org/CodeSystem/condition-category",
              "display" : "Problem List Item"
            } ]
          } ]
        }
      }
    }
  } ]
}