{
  "id" : "procedure-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/ucl/procedure-mapping",
  "name" : "procedure-mapping",
  "title" : "Mapping of OMOP procedure occurrence to the DT4H-Procedure profile",
  "source" : [ {
    "alias" : "omopProcedure",
    "url" : "https://www.ucl.ac.uk/fhir/StructureDefinition/OMOP-ProcedureOccurrence",
    "joinOn" : [ ]
  } ],
  "context" : { },
  "variable" : [ {
    "name" : "icd10Code",
    "language" : "text/fhirpath",
    "expression" : "trms:translateToCoding(procedure_concept_id.toString(), 'https://www.ohdsi.org/omop', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/omop-to-icd10').code"
  } ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "status" : "completed",
        "code" : {
          "coding" : [ {
            "system" : "http://hl7.org/fhir/sid/icd-10",
            "code" : "{{%icd10Code}}",
            "@sliceName" : "icdCode"
          } ]
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', person_id.toString())}}",
        "performedDateTime" : "{{procedure_datetime}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-Procedure" ]
        },
        "resourceType" : "Procedure"
      }
    },
    "precondition" : {
      "name" : "isValidProcedure",
      "language" : "text/fhirpath",
      "expression" : "%icd10Code.exists()"
    }
  } ]
}