{
  "id": "organization-mapping",
  "url": "https://datatools4heart.eu/fhir/mappings/omop/organization-mapping",
  "name": "organization-mapping",
  "title": "Mapping of omop care-site to FHIR Organization resource",
  "source": [{
    "alias": "source",
    "url": "https://some-url-for-metadata-purposes"
  }],
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Organization",
          "id": "{{mpp:getHashedId('Organization',care_site_id.toString()))}}",
          "meta": {
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "identifier": [
            {
              "use": "official",
              "system": "{{%sourceSystem.sourceUri}}",
              "value": "{{care_site_id.toString()}}"
            }
          ],
          "name": "{{? care_site_name}}",
          "type": [{
            "coding": [
              {
                "code": "{{concept_code}}",
                "system": "{{vocabulary_id}}",
                "display": "{{concept_name}}"
              }
            ]
          }],
          "address": [{
            "line": ["{{? address_1}}", "{{? address_2}}"],
            "county": "{{? county}}",
            "city": "{{? city}}",
            "state": "{{? state}}",
            "postalCode": "{{? zip}}",
            "country": "{{? country}}"
          }]
        }
      }
    }
  ]
}
