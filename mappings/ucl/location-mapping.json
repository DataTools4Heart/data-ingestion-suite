{
  "id": "location-mapping",
  "url": "https://datatools4heart.eu/fhir/mappings/omop/location-mapping",
  "name": "location-mapping",
  "title": "Mapping of omop location to FHIR Location resource",
  "source": [{
    "alias": "source",
    "url": "https://some-url-for-metadata-purposes"
  }],
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Location",
          "id": "{{mpp:getHashedId('Location',location_id.toString())}}",
          "meta": {
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "identifier": [
            {
              "use": "official",
              "system": "{{%sourceSystem.sourceUri}}",
              "value": "{{location_id.toString()}}"
            }
          ],
          "address": {
            "line": ["{{? address_1}}", "{{? address_2}}"],
            "county": "{{? county}}",
            "city": "{{? city}}",
            "state": "{{? state}}",
            "postalCode": "{{? zip}}",
            "country": "{{? country}}"
          }
        }
      }
    }
  ]
}
