{
  "id" : "patient-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/ucl/patient-mapping",
  "name" : "patient-mapping",
  "title" : "Mapping from OMOP person to the DT4h-Patient profile",
  "source" : [ {
    "alias" : "omopPerson",
    "url" : "https://www.ucl.ac.uk/fhir/StructureDefinition/OMOP-Person",
    "joinOn" : [ ]
  } ],
  "context" : { },
  "variable" : [ ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "resourceType" : "Patient",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-Patient" ],
          "source" : "{{%sourceSystem.sourceUri}}"
        },
        "extension" : [ {
          "url" : "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-PatientEthnicity",
          "@sliceName" : "ethnicity"
        } ],
        "gender" : "{{iif(gender_concept_id=8532, 'female', iif(gender_concept_id=8507, 'male', 'unknown'))}}",
        "birthDate" : "{{iif(birthdate.empty(), birth_datetime.utl:toFhirDateTime(), birthdate)}}",
        "deceasedDateTime" : "{{? death_datetime}}",
        "active" : true,
        "id" : "{{mpp:getHashedId('Patient',person_id.toString())}}"
      }
    }
  } ]
}
