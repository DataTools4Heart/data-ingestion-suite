{
  "id" : "condition-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/ucl/condition-mapping",
  "name" : "condition-mapping",
  "title" : "Mapping of OMOP condition occurrence to the DT4H-Condition FHIR profile",
  "source" : [ {
    "alias" : "omopCondition",
    "url" : "https://www.ucl.com/fhir/StructureDefinition/OMOP-Condition",
    "joinOn" : [ ]
  } ],
  "context" : { },
  "variable" : [ {
    "name" : "code",
    "language" : "text/fhirpath",
    "expression" : "iif(vocabulary_id.startsWith('ICD10'),utl:createFhirCoding('http://hl7.org/fhir/sid/icd-10', concept_code, concept_name),trms:translateToCoding(concept_code.replace('.', ''), 'http://terminology.hl7.org/CodeSystem/icd9cm', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/icd9-to-icd10'))"
  } ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "resourceType" : "Condition",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-Condition" ]
        },
        "clinicalStatus" : {
          "coding" : [ {
            "@sliceName" : "fhirCode"
          } ]
        },
        "code" : {
          "coding" : [ {
            "system" : "http://hl7.org/fhir/sid/icd-10",
            "code" : "{{%code.code}}",
            "@sliceName" : "icd10Code"
          } ]
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', person_id.toString())}}",
        "onsetDateTime" : "{{condition_start_datetime}}",
        "encounter" : "{{mpp:createFhirReferenceWithHashedId('Encounter', visit_occurrence_id.toString())}}",
        "id" : "{{mpp:getHashedId('Condition', condition_occurrence_id.toString())}}"
      }
    },
    "precondition" : {
      "name" : "codeExists",
      "language" : "text/fhirpath",
      "expression" : "%code.exists()"
    }
  } ]
}
