{
  "id": "observation-measurement-mapping",
  "url": "https://datatools4heart.eu/fhir/mappings/omop/observation-measurement-mapping",
  "name": "observation-measurement-mapping",
  "title": "Mapping of omop measurement to FHIR Observation resource",
  "source": [{
      "alias": "source",
      "url": "https://some-url-for-metadata-purposes"
  }],
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Observation",
          "id": "{{mpp:getHashedId('Observation', measurement_id.toString())}}",
          "meta": {
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "status": "final",
          "identifier": [
            {
              "use": "official",
              "system": "{{%sourceSystem.sourceUri}}",
              "value": "{{measurement_id.toString()}}"
            }
          ],
          "referenceRange": [{
            "low" : {
              "value": "{{? range_low}}"
            },
            "high" : {
              "value": "{{? range_high}}"
            }
          }],
          "performer": ["{{? mpp:createFhirReferenceWithHashedId('Practitioner', provider_id.toString())}}"],
          "encounter": "{{? mpp:createFhirReferenceWithHashedId('Encounter', visit_occurrence_id.toString())}}",
          "subject": "{{? mpp:createFhirReferenceWithHashedId('Patient', person_id.toString())}}",
          "code": {
            "coding": [
              {
                "code": "{{? concept_code}}",
                "system": "{{? vocabulary_id}}",
                "display": "{{? concept_name}}"
              }
            ]
          },
          "effectiveDateTime":  "{{? iif(measurement_datetime.empty(), measurement_date, measurement_datetime.utl:toFhirDateTime()}}",
          "valueQuantity": {
            "code": "{{? unit_code}}",
            "system": "{{? unit_vocab_id}}",
            "unit": "{{? unit_name}}",
            "value": "{{? value_as_number}}"
          },
          "valueCodeableConcept":  "{{? utl:createFhirCodeableConcept(value_as_vocab_id, value_as_concept_code, value_as_concept_name)}}"
        }
      }
    }
  ]
}
