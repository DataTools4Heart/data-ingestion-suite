{
  "id" : "medication-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/ucl/medication-mapping",
  "name" : "medication-mapping",
  "title" : "Mapping of OMOP drug exposure to the DT4H medication administration profile",
  "source" : [ {
    "alias" : "omopDrugExposure",
    "url" : "https://www.ucl.ac.uk/fhir/StructureDefinition/OMOP-DrugExposure",
    "joinOn" : [ ]
  } ],
  "context" : { },
  "variable" : [
    {
      "name": "atcIngredientCodes",
      "language": "text/fhirpath",
      "expression": "rxn:getMedicationDetails(concept_code).ingredientAndStrength.select(rxn:getATC(activeIngredientRxcui)).where($this.exists())"
    }
  ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "{{#ingredient}}": "{{%atcIngredientCodes}}",
        "{{*}}": {
          "resourceType": "MedicationAdministration",
          "id" : "{{mpp:getHashedId('MedicationAdministration', drug_exposure_id.toString() & '_' & %ingredient)}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-MedicationAdministration"
            ]
          },
          "status": "completed",
          "medicationCodeableConcept": "{{utl:createFhirCodeableConcept('http://www.whocc.no/atc', %ingredient, concept_name)}}",
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', person_id.toString())}}",
          "context": "{{mpp:createFhirReferenceWithHashedId('Encounter', visit_occurrence_id.toString())}}",
          "effectivePeriod": {
            "start": "{{drug_exposure_start_datetime}}",
            "end": "{{? drug_exposure_end_datetime}}"
          },
          "dosage": {
            "dose": {
              "value": "{{quantity}}"
            }
          }
        }
      }
    },
    "precondition" : {
      "name" : "mandatoryElementsExist",
      "language" : "text/fhirpath",
      "expression" : "%atcIngredientCodes.exists() and quantity.exists()"
    }
  } ]
}
