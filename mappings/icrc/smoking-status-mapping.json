{
  "id": "smoking-status-mapping",
  "url": "https://datatools4heart.eu/fhir/mappings/icrc/smoking-status-mapping",
  "name": "smoking-status-mapping",
  "title": "Mapping of icrc smoking status to DT4H Smoking Status FHIR profile",
  "source": [
    {
      "alias": "source",
      "url": "https://datatools4heart.eu/icrc/PatientAddiction"
    }
  ],
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Observation",
          "id": "{{mpp:getHashedId('Observation', subject.toString() + date_from.toString() + smoking_status.toString())}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-SmokingStatus"
            ],
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "status": "final",
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "social-history"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "72166-2",
                "display": "Tobacco smoking status"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', subject.toString())}}",
          "effectivePeriod": {
            "start": "{{date_from}}",
            "end": "{{? date_to}}"
          },
          "valueCodeableConcept": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "{{smoking_status}}",
                "display": "{{name}}"
              }
            ]
          }
        }
      }
    }
  ]
}
