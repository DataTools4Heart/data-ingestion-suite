{
  "id": "echocardiograph-mapping",
  "url": "https://datatools4heart.eu/fhir/mappings/icrc/echocardiograph-mapping",
  "name": "ecg-mapping",
  "title": "Mapping of the echo tables to the DT4H Echocardiograph FHIR profile",
  "source": [
    {
      "alias": "echos",
      "url": "https://datatools4heart.eu/icrc/Echocardiogram",
      "joinOn": ["id_patient"]
    },
    {
      "alias": "encounters",
      "url": "https://datatools4heart.eu/icrc/Encounter",
      "joinOn": ["id_patient"]
    }
  ],
  "variable": [
    {
      "name": "relatedEncounter",
      "language": "text/fhirpath",
      "expression": "%encounters.where((time_stamp.toString().replace(' ','T') + 'Z').toDate() <= (%context.time_stamp.replace(' ','T') + 'Z').toDate() and (time_stamp.toString().replace(' ','T') + 'Z').toDate() + 7 days > (%context.time_stamp.replace(' ','T') + 'Z').toDate()).first()"
    }
  ],
  "mapping": [
    {
      "precondition": {
        "name": "relatedEncounterExist",
        "language": "text/fhirpath",
        "expression": "%relatedEncounter.exists()"
      },
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Observation",
          "id": "{{mpp:getHashedId('Observation', 'icrc_' + id.toString() + '_echocardiograph')}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-Echocardiograph"
            ],
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "status": "final",
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "procedure"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "34552-0",
                "display": "Cardiac 2D echo panel"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', 'icrc_' + id_patient.toString())}}",
          "effectiveDateTime": "{{time_stamp.toString().replace(' ','T') + 'Z'}}",
          "encounter": "{{mpp:createFhirReferenceWithHashedId('Encounter', 'icrc_' + %relatedEncounter.id_encounter.toString())}}",
          "component": [
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "8806-2",
                    "display": "Left ventricular Ejection fraction by 2D echo"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{lv_ef}}",
                "system": "http://unitsofmeasure.org",
                "code": "%",
                "unit": "%"
              }
            }
          ]
        }
      }
    }
  ]
}
