{
  "id": "echocardiograph-mapping",
  "url": "https://datatools4heart.eu/fhir/mappings/icrc/echocardiograph-mapping",
  "name": "echo-mapping",
  "title": "Mapping of the echo tables to the DT4H Echocardiograph FHIR profile",
  "source": [
    {
      "alias": "echos",
      "url": "https://datatools4heart.eu/icrc/Echocardiogram",
      "joinOn": []
    }
  ],
  "context": {},
  "variable": [],
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('Observation', id.toString() + '_echocardiograph')}}",
          "meta": {
            "source": "{{%sourceSystem.sourceUri}}",
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-Echocardiograph"
            ]
          },
          "resourceType": "Observation",
          "status": "final",
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "procedure"
                }
              ],
              "@sliceName": "hl7Category"
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "34552-0",
                "display": "Cardiac 2D echo panel",
                "@sliceName": "loincCode"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', id_patient.toString())}}",
          "encounter": "{{mpp:createFhirReferenceWithHashedId('Encounter', id_encounter.toString())}}",
          "effectiveDateTime": "{{date_exec.toString().replace(' ','T') + 'Z'}}",
          "component": [
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "8806-2",
                    "display": "Left ventricular Ejection fraction by 2D echo"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{lv_ef}}",
                "unit": "%",
                "system": "http://unitsofmeasure.org",
                "code": "%"
              }
            },
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "18083-6",
                    "display": "Left ventricular Internal diameter minor axis diastole by US 2D"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{lv_idd}}",
                "unit": "mm",
                "system": "http://unitsofmeasure.org",
                "code": "mm"
              }
            },
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "79969-2",
                    "display": "Interventricular septum Thickness at end diastole by US 2D"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{ivs}}",
                "unit": "mm",
                "system": "http://unitsofmeasure.org",
                "code": "mm"
              }
            },
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "18085-1",
                    "display": "Left ventricular Internal diameter minor axis systole by US 2D"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{lv_ids}}",
                "unit": "mm",
                "system": "http://unitsofmeasure.org",
                "code": "mm"
              }
            },
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "29468-6",
                    "display": "Left atrial Diameter anterior-posterior systole by US 2D"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{ls}}",
                "unit": "mm",
                "system": "http://unitsofmeasure.org",
                "code": "mm"
              }
            },
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "75988-6",
                    "display": "Left ventricular End diastolic volume"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{edv}}",
                "unit": "mL",
                "system": "http://unitsofmeasure.org",
                "code": "mL"
              }
            },
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "75989-4",
                    "display": "Left ventricular End systolic volume"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{esv}}",
                "unit": "mL",
                "system": "http://unitsofmeasure.org",
                "code": "mL"
              }
            },
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "79971-8",
                    "display": "Interventricular septum thickness at end systole by US 2D"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{ivss}}",
                "unit": "mm",
                "system": "http://unitsofmeasure.org",
                "code": "mm"
              }
            },
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "77903-3",
                    "display": "Tricuspid valve annulus Excursion distance during systole by US.M-mode"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{tapse}}",
                "unit": "cm",
                "system": "http://unitsofmeasure.org",
                "code": "cm"
              }
            },
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "80032-6",
                    "display": "Left ventricular posterior wall Thickness at end diastole by US 2D"
                  }
                ]
              },
              "valueQuantity": {
                "value": "{{lv_pwd}}",
                "unit": "mm",
                "system": "http://unitsofmeasure.org",
                "code": "mm"
              }
            }
          ]
        }
      }
    }
  ]
}