{
  "id": "icrc-nyha-mapping",
  "url": "https://datatools4heart.eu/fhir/mappings/icrc/nyha-mapping",
  "name": "nyha-mapping",
  "title": "Mapping of New York Heart Assessment evaluations in the encounter table to DT4H NYHA FHIR profile",
  "source": [{
    "alias": "source",
    "url": "https://datatools4heart.eu/icrc/NYHA"
  }],
  "context": {
    "nyhaValuesConceptMap": {
      "category": "concept-map",
      "url": "./nyha-values-concept-map.csv"
    }
  },
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Observation",
          "id": "{{mpp:getHashedId('Observation', 'icrc_' + id_encounter.toString() + '_nyha')}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-NewYorkHeartAssessment"
            ],
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "status": "final",
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "survey"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "88020-3",
                "display": "Functional capacity NYHA"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', id_patient.toString())}}",
          "effectiveDateTime": "{{time_stamp.toString().replace(' ','T') + 'Z'}}",
          "valueCodeableConcept": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "{{mpp:getConcept(%nyhaValuesConceptMap, nyha.toString(), 'target_code')}}",
                "display": "{{mpp:getConcept(%nyhaValuesConceptMap, nyha.toString(), 'target_display')}}"
              }
            ]
          },
          "encounter": "{{mpp:createFhirReferenceWithHashedId('Encounter', id_encounter.toString())}}"
        }
      }
    }
  ]
}
