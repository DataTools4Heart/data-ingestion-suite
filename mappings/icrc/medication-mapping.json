{
  "id": "icrc-medication-mapping",
  "url": "https://datatools4heart.eu/fhir/mappings/icrc/medication-mapping",
  "name": "medication-mapping",
  "title": "Mapping of medication table to DT4H Medication Used FHIR profile",
  "source": [
    {
      "alias": "medications",
      "url": "https://datatools4heart.eu/icrc/Medication",
      "joinOn": ["id_patient"]
    },
    {
      "alias": "encounters",
      "url": "https://datatools4heart.eu/icrc/Encounter",
      "joinOn": ["id_patient"]
    }
  ],
  "variable": [
    {
      "name": "relatedEncounter",
      "language": "text/fhirpath",
      "expression": "%encounters.where((time_stamp.toString().replace(' ','T') + 'Z').toDate() <= %context.date_from.toDate() and (time_stamp.toString().replace(' ','T') + 'Z').toDate() + 7 days > %context.date_from.toDate()).first()"
    }
  ],
  "mapping": [
    {
      "precondition": {
        "name": "relatedEncounterExists",
        "language": "text/fhirpath",
        "expression": "%relatedEncounter.exists()"
      },
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "MedicationAdministration",
          "id": "{{mpp:getHashedId('Medication', 'icrc_' + id_patient_drug.toString())}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/DT4H-MedicationAdministration"
            ],
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "status": "completed",
          "medicationCodeableConcept": {
            "coding": [
              {
                "system": "http://www.whocc.no/atc",
                "code": "{{atc_who}}",
                "display": "{{? name}}"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', id_patient.toString())}}",
          "effectivePeriod": {
            "start": "{{date_from}}",
            "end": "{{? date_to}}"
          },
          "context": "{{mpp:createFhirReferenceWithHashedId('Encounter', %relatedEncounter.id_encounter.toString())}}",
          "dosage": {
            "dose": {
              "value": "{{dose}}"
            }
          }
        }
      }
    }
  ]
}
