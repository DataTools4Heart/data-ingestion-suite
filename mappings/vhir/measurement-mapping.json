{
  "id" : "measurement-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/vhir/measurement-mapping",
  "name" : "measurement-mapping",
  "title" : "Mapping of OMOP measurement to several DT4H profiles",
  "isDraft" : false,
  "source" : [ {
    "alias" : "omopMeasurement",
    "url" : "https://www.vallhebron.com/fhir/StructureDefinition/OMOP-Measurement",
    "joinOn" : [ "PERSON_ID" ]
  }, {
    "alias" : "omopVisit",
    "url" : "https://www.vallhebron.com/fhir/StructureDefinition/OMOP-VisitOccurrence",
    "joinOn" : [ "PERSON_ID" ]
  } ],
  "context" : {
    "labCodeConversion" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/vhir/lab-omop-to-loinc-concept-map.csv"
    },
    "labUnitConversion" : {
      "category" : "unit-conversion",
      "url" : "$CONTEXT_REPO/vhir/lab-results-unit-conversion.csv"
    },
    "vitalSignCodeConversion" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/vhir/vitalsigns-omop-to-loinc-concept-map.csv"
    }
  },
  "variable" : [ ],
  "mapping" : [ {
    "description" : "Mapping from OMOP Measurement to the DT4H LabResult profile",
    "precondition" : {
      "name" : "isLabResult",
      "language" : "text/fhirpath",
      "expression" : "mpp:getConcept(%labCodeConversion, MEASUREMENT_CONCEPT_ID.toString()).exists()"
    },
    "expression" : {
      "name" : "labResults",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('Observation', MEASUREMENT_ID.toString())}}",
        "meta" : {
          "source" : "{{%sourceSystem.sourceUri}}",
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-LabResult" ]
        },
        "resourceType" : "Observation",
        "status" : "final",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/observation-category",
            "code" : "laboratory",
            "display" : "Laboratory"
          } ]
        } ],
        "code" : {
          "coding" : [ {
            "{{#loincCoding}}" : "{{mpp:getConcept(%labCodeConversion, MEASUREMENT_CONCEPT_ID.toString()}}",
            "{{*}}" : {
              "system" : "http://loinc.org",
              "code" : "{{%loincCoding.target_code}}",
              "display" : "{{%loincCoding.target_display}}"
            },
            "@sliceName" : "loincCode"
          } ]
        },
        "effectiveDateTime" : "{{iif(MEASUREMENT_DATETIME.empty(), MEASUREMENT_DATE, MEASUREMENT_DATETIME.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss'))}}",
        "valueQuantity" : {
          "system" : "http://unitsofmeasure.org",
          "code" : "{{UNIT_CONCEPT_ID}}",
          "unit" : "{{UNIT_CONCEPT_ID}}",
          "value" : "{{VALUE_AS_NUMBER}}"
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', PERSON_ID.toString())}}",
        "encounter" : "{{? %omopVisit.select(iif($this.VISIT_START_DATE <= %context.MEASUREMENT_DATE and $this.VISIT_END_DATE >= %context.MEASUREMENT_DATE, mpp:createFhirReferenceWithHashedId('Encounter', $this.VISIT_OCCURRENCE_ID.toString()),{})).first()}}"
      }
    }
  }, {
    "description" : "Mapping of OMOP measurement to DT4H Vital Sign profile",
    "precondition" : {
      "name" : "isVitalSign",
      "language" : "text/fhirpath",
      "expression" : "mpp:getConcept(%vitalSignCodeConversion, MEASUREMENT_CONCEPT_ID.toString()).exists()"
    },
    "expression" : {
      "name" : "vitalSigns",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('Observation', MEASUREMENT_ID.toString())}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-VitalSign" ]
        },
        "resourceType" : "Observation",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/observation-category",
            "code" : "vital-signs",
            "display" : "Vital Signs"
          } ]
        } ],
        "code" : {
          "coding" : [ {
            "{{#loincCoding}}" : "{{mpp:getConcept(%vitalSignCodeConversion, MEASUREMENT_CONCEPT_ID.toString())}}",
            "{{*}}" : {
              "system" : "http://loinc.org",
              "code" : "{{%loincCoding.target_code}}",
              "display" : "{{%loincCoding.target_display}}"
            },
            "@sliceName" : "loincCode"
          } ]
        },
        "effectiveDateTime" : "{{iif(MEASUREMENT_DATETIME.empty(),MEASUREMENT_DATE,MEASUREMENT_DATETIME.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss'))}}",
        "valueQuantity" : {
          "system" : "http://unitsofmeasure.org",
          "code" : "{{mpp:getConcept(%vitalSignCodeConversion, MEASUREMENT_CONCEPT_ID.toString(), 'target_unit')}}",
          "value" : "{{VALUE_AS_NUMBER}}",
          "unit" : "{{mpp:getConcept(%vitalSignCodeConversion, MEASUREMENT_CONCEPT_ID.toString(), 'target_unit')}}"
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', PERSON_ID.toString())}}",
        "encounter" : "{{? %omopVisit.select(iif($this.VISIT_START_DATE <= %context.MEASUREMENT_DATE and $this.VISIT_END_DATE >= %context.MEASUREMENT_DATE, mpp:createFhirReferenceWithHashedId('Encounter', $this.VISIT_OCCURRENCE_ID.toString()),{})).first()}}",
        "status" : "final"
      }
    }
  } ]
}