{
  "id" : "medication-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/vhir/medication-mapping",
  "name" : "medication-mapping",
  "title" : "Mapping of OMOP drug exposure to the DT4H medication request profile",
  "isDraft" : false,
  "source" : [ {
    "alias" : "omopDrugExposure",
    "url" : "https://www.vallhebron.com/fhir/StructureDefinition/OMOP-DrugExposure",
    "joinOn" : [ "PERSON_ID" ]
  }, {
    "alias" : "omopVisit",
    "url" : "https://www.vallhebron.com/fhir/StructureDefinition/OMOP-VisitOccurrence",
    "joinOn" : [ "PERSON_ID" ]
  } ],
  "context" : {
    "omopToAtcConceptMap" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/vhir/omop-to-atc.csv"
    }
  },
  "variable" : [ {
    "name" : "atcCodes",
    "language" : "text/fhirpath",
    "expression" : "mpp:getConcept(%omopToAtcConceptMap, DRUG_CONCEPT_ID.toString())"
  } ],
  "mapping" : [ {
    "description" : "VHIR informed that DRUG_EXPOSURE table only have prescription records so we map to MedicationRequest",
    "precondition" : {
      "name" : "atcCodesExist",
      "language" : "text/fhirpath",
      "expression" : "%atcCodes.exists()"
    },
    "expression" : {
      "name" : "medication-request",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('MedicationRequest', DRUG_EXPOSURE_ID.toString())}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-MedicationRequest" ]
        },
        "resourceType" : "MedicationRequest",
        "medication" : {
          "concept" : {
            "coding" : {
              "{{#codingVar}}" : "{{%atcCodes}}",
              "{{*}}" : {
                "system" : "{{%codingVar.target_system}}",
                "code" : "{{%codingVar.target_code}}",
                "display" : "{{%codingVar.target_display}}"
              }
            }
          }
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', PERSON_ID.toString())}}",
        "encounter" : "{{? iif(VISIT_OCCURRENCE_ID.exists($this != ''), mpp:createFhirReferenceWithHashedId('Encounter', VISIT_OCCURRENCE_ID.toString()), %omopVisit.select(iif($this.VISIT_START_DATE <= %context.DRUG_EXPOSURE_START_DATE and $this.VISIT_END_DATE >= %context.DRUG_EXPOSURE_START_DATE, mpp:createFhirReferenceWithHashedId('Encounter', $this.VISIT_OCCURRENCE_ID.toString()),{})).first() ) }}",
        "status" : "completed",
        "intent" : "order",
        "effectiveDosePeriod" : {
          "start" : "{{iif(DRUG_EXPOSURE_START_DATETIME.exists(), DRUG_EXPOSURE_START_DATETIME.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss'), DRUG_EXPOSURE_START_DATE)}}",
          "end" : "{{? iif(DRUG_EXPOSURE_END_DATEtime.exists(), DRUG_EXPOSURE_END_DATEtime.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss'), DRUG_EXPOSURE_END_DATE)}}"
        },
        "dosageInstruction" : [ {
          "doseAndRate" : [ {
            "doseQuantity" : {
              "value" : "{{? QUANTITY.toDecimal()}}"
            }
          } ]
        } ]
      }
    }
  } ]
}