{
  "id" : "echo-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/vhir/echo-mapping",
  "name" : "echo-mapping",
  "title" : "Mapping of OMOP measurement_echocardio to DT4H Echo profile",
  "isDraft" : false,
  "source" : [ {
    "alias" : "omopMeasurement",
    "url" : "https://www.vallhebron.com/fhir/StructureDefinition/OMOP-Measurement",
    "joinOn" : [ "PERSON_ID" ]
  }, {
    "alias" : "omopVisit",
    "url" : "https://www.vallhebron.com/fhir/StructureDefinition/OMOP-VisitOccurrence",
    "joinOn" : [ "PERSON_ID" ]
  } ],
  "context" : {
    "echoMap" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/vhir/echo-lvef-concept-map.csv"
    }
  },
  "variable" : [ ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('Observation', MEASUREMENT_ID.toString() & 'echo')}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Echocardiograph" ]
        },
        "resourceType" : "Observation",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/observation-category",
            "code" : "imaging",
            "display" : "Imaging"
          } ]
        } ],
        "code" : {
          "coding" : [ {
            "system" : "http://loinc.org",
            "code" : "34552-0",
            "display" : "Cardiac 2D echo panel",
            "@sliceName" : "loincCode"
          } ]
        },
        "effectiveDateTime" : "{{MEASUREMENT_DATE.utl:toFhirDateTime('yyyy-MM-dd')}}",
        "component" : {
          "{{#ind}}" : "{{utl:indices(0, count.toInteger() - 1)}}",
          "{{*}}" : {
            "code" : {
              "coding" : [ {
                "system" : "http://loinc.org",
                "code" : "{{mpp:getConcept(%echoMap, MEASUREMENT_CONCEPT_ID[%ind].toString(), 'target_code')}}"
              } ]
            },
            "valueQuantity" : {
              "system" : "http://unitsofmeasure.org",
              "code" : "%",
              "value" : "{{VALUE_AS_NUMBER[%ind]}}",
              "unit" : "%"
            }
          }
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', PERSON_ID.toString())}}",
        "encounter" : "{{? %omopVisit.select(iif($this.VISIT_START_DATE <= %context.MEASUREMENT_DATE and $this.VISIT_END_DATE >= %context.MEASUREMENT_DATE, mpp:createFhirReferenceWithHashedId('Encounter', $this.VISIT_OCCURRENCE_ID.toString()),{})).first()}}",
        "identifier" : [ {
          "value" : "{{MEASUREMENT_ID.toString()}}"
        } ],
        "status" : "final"
      }
    }
  } ]
}