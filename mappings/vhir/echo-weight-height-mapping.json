{
  "id" : "echo-weight-height-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/vhir/echo-weight-height-mapping",
  "name" : "echo-weight-height-mapping",
  "title" : "Mapping Weight & Height information from \"MEASUREMENT_ECHOCARDIO\" table",
  "isDraft" : false,
  "source" : [ {
    "alias" : "omopMeasurement",
    "url" : "https://www.vallhebron.com/fhir/StructureDefinition/OMOP-Measurement",
    "joinOn" : [ "PERSON_ID" ]
  }, {
    "alias" : "omopVisit",
    "url" : "https://www.vallhebron.com/fhir/StructureDefinition/OMOP-VisitOccurrence",
    "joinOn" : [ "PERSON_ID" ]
  } ],
  "context" : { },
  "variable" : [ ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "id" : "{{mpp:getHashedId('Observation', MEASUREMENT_ID.toString() & MEASUREMENT_CONCEPT_ID.toString() & 'vitalsign')}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-VitalSign" ]
        },
        "resourceType" : "Observation",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/observation-category",
            "code" : "vital-signs",
            "display" : "Vital Signs"
          } ]
        } ],
        "code" : {
          "coding" : [ {
            "system" : "http://loinc.org",
            "code" : "{{iif(MEASUREMENT_CONCEPT_ID = 4099154, '29463-7', '8302-2')}}",
            "@sliceName" : "loincCode"
          } ]
        },
        "effectiveDateTime" : "{{MEASUREMENT_DATE.utl:toFhirDateTime('yyyy-MM-dd')}}",
        "valueQuantity" : {
          "system" : "http://unitsofmeasure.org",
          "code" : "{{iif(MEASUREMENT_CONCEPT_ID = 4099154, 'kg', 'cm')}}",
          "value" : "{{VALUE_AS_NUMBER}}",
          "unit" : "{{iif(MEASUREMENT_CONCEPT_ID = 4099154, 'kg', 'cm')}}"
        },
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', PERSON_ID.toString())}}",
        "encounter" : "{{? %omopVisit.select(iif($this.VISIT_START_DATE <= %context.MEASUREMENT_DATE and $this.VISIT_END_DATE >= %context.MEASUREMENT_DATE, mpp:createFhirReferenceWithHashedId('Encounter', $this.VISIT_OCCURRENCE_ID.toString()),{})).first()}}",
        "status" : "final"
      }
    }
  } ]
}