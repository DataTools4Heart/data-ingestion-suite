{
  "id" : "medication-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/i2b2/medication-mapping",
  "name" : "medication-mapping",
  "title" : "Mapping of i2b2 observation fact to the DT4H medication administration profile",
  "source" : [ {
    "alias" : "observationFact",
    "url" : "https://datatools4heart.eu/fhir/schemas/i2b2/ObservationFact",
    "joinOn" : [ ]
  } ],
  "context" : { },
  "variable" : [ {
    "name": "isMedication",
    "language": "text/fhirpath",
    "expression": "MODIFIER_CD = 'MED:DOSE' and CONCEPT_CD.startsWith('NDC') "
  }, {
    "name" : "rxNormCode",
    "language" : "text/fhirpath",
    "expression" : "trms:translateToCoding(CONCEPT_CD.split(':').last(),'https://dps.fda.gov/ndc', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/ndc-to-rxnorm').code"
  }, {
    "name" : "atcIngredientCodes",
    "language" : "text/fhirpath",
    "expression" : "rxn:getMedicationDetails(%rxNormCode).ingredientAndStrength.select(rxn:getATC(activeIngredientRxcui)).where($this.exists())"
  }],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "{{#ingredient}}" : "{{? %atcIngredientCodes}}",
        "{{*}}" : {
          "status" : "completed",
          "medication" : {
            "concept" : {
              "{{#medicationCodeableConceptVar}}" : "{{%atcIngredientCodes}}",
              "{{?}}" : "{{utl:createFhirCodeableConcept('http://www.whocc.no/atc', %medicationCodeableConceptVar, {})}}"
            }
          },
          "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', PATIENT_NUM.toString())}}",
          "encounter" : "{{mpp:createFhirReferenceWithHashedId('Encounter', ENCOUNTER_NUM.toString())}}",
          "occurencePeriod" : {
            "start" : "{{? iif(START_DATE.exists(), START_DATE.toString().substring(0, 10).replace('/', '-'), null) }}",
            "end" : "{{? iif(END_DATE.exists(), END_DATE.toString().substring(0, 10).replace('/', '-'), null) }}"
          },
          "dosage" : {
            "dose" : {
              "value" : "{{NVAL_NUM.toDecimal()}}"
            }
          },
          "id" : "{{mpp:getHashedId('MedicationAdministration', ENCOUNTER_NUM.toString() & '_' & %ingredient & TEXT_SEARCH_INDEX.toString() )}}",
          "meta" : {
            "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-MedicationAdministration" ]
          },
          "resourceType" : "MedicationAdministration"
        }
      }
    },
    "precondition" : {
      "name" : "isMedication",
      "language" : "text/fhirpath",
      "expression" : "%isMedication"
    }
  } ]
}
