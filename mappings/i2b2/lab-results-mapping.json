{
  "id" : "lab-results-mapping",
  "url" : "https://datatools4heart.eu/fhir/mappings/i2b2/lab-results-mapping",
  "name" : "lab-results-mapping",
  "title" : "Mapping from i2b2 observation fact to the DT4H LabResult profile",
  "source" : [ {
    "alias" : "observationFact",
    "url" : "https://datatools4heart.eu/fhir/schemas/i2b2/ObservationFact",
    "joinOn" : [ ]
  } ],
  "context" : {
    "labResultCodes" : {
      "category" : "concept-map",
      "url" : "$CONTEXT_REPO/i2b2/lab-result-codes.csv"
    },
    "unitConversionMap" : {
      "category" : "unit-conversion",
      "url" : "$CONTEXT_REPO/i2b2/lab-results-unit-conversion.csv"
    }
  },
  "variable" : [ {
    "name": "isLabResult",
    "language": "text/fhirpath",
    "expression": "CONCEPT_CD.startsWith('LOINC')"
  }, {
    "name": "labCodeValue",
    "language": "text/fhirpath",
    "expression": "CONCEPT_CD.split(':').last()"
  }
  ],
  "mapping" : [ {
    "expression" : {
      "name" : "result",
      "language" : "application/fhir-template+json",
      "value" : {
        "status" : "final",
        "category" : [ {
          "coding" : [ {
            "system" : "http://terminology.hl7.org/CodeSystem/observation-category",
            "code" : "laboratory",
            "display" : "Laboratory"
          } ]
        } ],
        "code" : {
          "coding" : [ {
            "system" : "http://loinc.org",
            "code" : "{{%labCodeValue}}",
            "display" : "{{ mpp:getConcept(%labResultCodes, %labCodeValue, 'source_display') }}",
            "@sliceName" : "loincCode"
          } ]
        },
        "effectiveDateTime" : "{{? iif(START_DATE.exists(), START_DATE.toString().substring(0, 10).replace('/', '-'), null) }}",
        "subject" : "{{mpp:createFhirReferenceWithHashedId('Patient', PATIENT_NUM.toString())}}",
        "valueCodeableConcept": {
          "{{#codedValue}}": "{{iif( TVAL_CHAR.exists(), trms:translateToCoding(TVAL_CHAR, 'https://www.i2b2.org', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/string-to-snomed'), {} )}}",
          "{{?}}": {
            "coding": "{{* %codedValue}}",
            "text": "{{? TVAL_CHAR }}"
          }
        },
        "valueString": {
          "{{#strValue}}": "{{iif(TVAL_CHAR.exists() and trms:translateToCoding(TVAL_CHAR, 'https://www.i2b2.org', 'https://datatools4heart.eu/fhir/mappings/ConceptMap/string-to-snomed').exists().not(), TVAL_CHAR, {})}}",
          "{{?}}": "{{%strValue}}"
        },
        "valueQuantity": {
          "{{#quantityValue}}": "{{iif(NVAL_NUM.exists(), true, {})}}",
          "{{?}}": "{{ mpp:convertAndReturnQuantity(%unitConversionMap, %labCodeValue, NVAL_NUM, UNITS_CD) }}"
        },
        "encounter" : "{{mpp:createFhirReferenceWithHashedId('Encounter', ENCOUNTER_NUM.toString())}}",
        "id" : "{{mpp:getHashedId('Observation', PATIENT_NUM.toString() & ENCOUNTER_NUM.toString() & UNITS_CD & TEXT_SEARCH_INDEX.toString())}}",
        "meta" : {
          "source" : "{{%sourceSystem.sourceUri}}",
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-LabResult" ]
        },
        "resourceType" : "Observation"
      }
    },
    "precondition" : {
      "name" : "isLabResult",
      "language" : "text/fhirpath",
      "expression" : "%isLabResult"
    }
  } ]
}
